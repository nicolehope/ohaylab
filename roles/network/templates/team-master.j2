DEVICE={{ item.key }}
DEVICETYPE=Team
{% if item.value.mtu %}
MTU={{ item.value.mtu }}
{% endif %}
BOOTPROTO={{ item.value.bootproto }}
{% if item.value.bootproto == 'static' %}
